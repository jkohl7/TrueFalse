<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrueFalse.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="True/False Lab" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Answer the true or false questions!" FontSize="Title"/>
        <Label x:Name="outlabel" FontSize="18"/>
        <Button x:Name="trueButton" Text="True!" Clicked="onTrueClick"/>
        <Button x:Name="falseButton" Text="False!" Clicked="onFalseClick"/>

    </StackLayout>

</ContentPage>
